    "gsap": "^3.13.0",
    "nuxt": "^3.14.159",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@nuxt/devtools": "^1.6.0",
    "@nuxt/eslint-config": "^0.7.3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
